<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="memberns">
	<select id="select" parameterType="string" resultType="member">
		select *
		from member where id=#{id}
	</select>
	<insert id="insert" parameterType="member">
		insert into member
		values(#{id},
		#{password},#{name},#{email},#{gender},sysdate,#{fileName},'n')
	</insert>
	<update id="update" parameterType="member">
		update member set
		password=#{password},name=#{name},email=#{email},gender=#{gender}
		<if test="fileName != null and fileName != ''">
			,fileName=#{fileName}
		</if>
		where id=#{id}
	</update>
	<update id="delete" parameterType="string">
		update member set m_del='y'
		where id =#{id}
	</update>
	<select id="findId" parameterType="string" resultType="member">
		select *
		from member where email = #{email}
	</select>

	<select id="findIdCheck" resultType="integer">
		select count(*) from member
		where email = #{email}
	</select>

	<select id="adminMbTotal" resultType="integer"
		parameterType="member">
		select count(*) from member
	</select>

	<select id="mbList" resultType="member" parameterType="member">
		select * from
		(select rowNum rn, a.* from(
		select * from member
		<where>
			<if test="keyword!=null and keyword!=''">
				${search} like '%' || #{keyword} || '%'
			</if>
		</where>
		order by regdate desc )a)
		where rn
		between #{startRow} and #{endRow}
	</select>
	<update id="deleteAdmin" parameterType="member">
		update member set m_del='y'
		where id =#{id}
	</update>
</mapper>