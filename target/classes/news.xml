<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="newsns">

	<!-- 뉴스 목록 -->
	<select id="nlist" parameterType="news" resultType="news">
		select * from
		(select rowNum rn, a.* from (select * from news where n_del = 'n'
		order by nno
		desc)a)
		where rn between #{startRow} and #{endRow}
	</select>
	
	<!-- 뉴스 확인 -->
	<select id="select" parameterType="integer" resultType="news">
		select * from news where nno = #{nno}
	</select>
	
	<!-- 최신 뉴스 -->
	<select id="recentNews" resultType="news">
		select * from news where nno = (select max(nno) from news)
	</select>
	
	<!-- 뉴스 총 개수 -->
	<select id="getTotal" resultType="integer">
		select count(*) from news
	</select>
		
	<select id="list" parameterType="news" resultType="news">
		select * from news
	</select>
	
</mapper>