<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="carns">
	<select id="getTotal" parameterType="car" resultType="integer">
		select
		count(*) from car
	</select>
	<select id="carList" parameterType="car" resultType="car">
		select *
		from(select rowNum rn, a.* from (
		select * from car

		)a)
		where rn
		between #{startRow} and #{endRow}
	</select>

	<insert id="insertCar" parameterType="car">
		insert into car
		values(car_seq.nextval,#{c_name},#{min_price},#{max_price},#{brand},#{c_cover_img},#{c_img},
		#{c_content},#{c_kind},#{c_date},#{engine},#{gear},#{displacement},#{drive_type},#{max_output},#{suspention},#{torque},#{brake},#{accel},#{max_speed},'n')
	</insert>
	
	<!-- 예약폼 브랜드 select -->
	<select id="brandlist" parameterType="car" resultType="car">
		select DISTINCT brand from car 
		<where>
		 <if test="cno != null and cno != ''">
		 	cno = #{cno}
		 </if>
		</where>
	</select>
	
	<!-- 모델 select -->
	<select id="getCarName" parameterType="car" resultType="car">
		select * from car where brand = #{brand}
	</select>
</mapper>